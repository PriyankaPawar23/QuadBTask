<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/background"
                android:background="@color/white"
                android:scaleType="centerCrop"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="the best"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:text="offers"
                    android:textColor="@color/white"
                    android:textSize="40dp"
                    android:layout_below="@id/txt1"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_below="@id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="at the best restaurants"
                    android:layout_marginTop="-10dp"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="order now"
                    android:textAllCaps="true"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    app:cornerRadius="7dp"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel1">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtEat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eat"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtEat">

            <LinearLayout
                android:id="@+id/first_linear"
                android:orientation="horizontal"
                android:layout_width="380dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtEat"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/first_img"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    app:civ_border_width="2dp"
                    android:src="@drawable/img_healthy"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/sec_img"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    app:civ_border_width="2dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/img_dosa"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/third_img"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    app:civ_border_width="2dp"
                    android:src="@drawable/img_vada"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/four_img"
                    android:layout_width="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="90dp"
                    app:civ_border_width="2dp"
                    android:src="@drawable/img_idli"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="110dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Healthy"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Dosa"
                        android:layout_marginStart="25dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Vada"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Idli"
                        android:layout_marginStart="26dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/sec_linear"
                    android:orientation="horizontal"
                    android:layout_width="380dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/first_name"
                    android:layout_marginTop="140dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/fifth_img"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        app:civ_border_width="2dp"
                        android:src="@drawable/img_sandwich"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/sixth_img"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        app:civ_border_width="2dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/img_paratha"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/seven_img"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="20dp"
                        app:civ_border_width="2dp"
                        android:src="@drawable/img_manchurian"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/eight_img"
                        android:layout_width="80dp"
                        android:layout_marginStart="20dp"
                        android:layout_height="90dp"
                        app:civ_border_width="2dp"
                        android:src="@drawable/img_pavbhaji"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="235dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Sandwich"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Paratha"
                        android:layout_marginStart="22dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Manchirian"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Pav Bhaji"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />


                </LinearLayout>

                <com.google.android.material.chip.Chip
                    android:id="@+id/more_clip"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="260dp"
                    style="@style/CustomChipStyle"
                    android:text="see more"
                    android:textAlignment="center"
                    android:checkable="false"
                    app:closeIcon="@drawable/ic_down"
                    app:closeIconEnabled="true"/>

                <RelativeLayout
                    android:id="@+id/hiddenLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="270dp"
                    android:visibility="gone">
                <LinearLayout
                    android:id="@+id/third_linear"
                    android:orientation="horizontal"
                    android:layout_width="380dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/first_img1"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        app:civ_border_width="2dp"
                        android:src="@drawable/img_healthy"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/sec_img2"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        app:civ_border_width="2dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/img_dosa"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/third_img3"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="20dp"
                        app:civ_border_width="2dp"
                        android:src="@drawable/img_vada"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/four_img4"
                        android:layout_width="80dp"
                        android:layout_marginStart="20dp"
                        android:layout_height="90dp"
                        app:civ_border_width="2dp"
                        android:src="@drawable/img_idli"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="90dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Healthy"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Dosa"
                        android:layout_marginStart="25dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Vada"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Idli"
                        android:layout_marginStart="26dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />



                </LinearLayout>


                    <com.google.android.material.chip.Chip
                        android:id="@+id/collapse"
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="120dp"
                        style="@style/CustomChipStyle"
                        android:text="see more"
                        android:checkable="false"
                        android:textAlignment="center"
                        app:closeIcon="@drawable/ic_up"
                        app:closeIconEnabled="true"
                        />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>






        </RelativeLayout>

    </RelativeLayout>


</ScrollView>